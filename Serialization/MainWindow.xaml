<Window x:Class="Serialization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Serialization"
        mc:Ignorable="d"
        Title="Serialization App" Height="390" Width="525" Closing="MainWindow_OnClosing">
    <Grid x:Name="MainRoot" Background="White">
        <Button x:Name="CreateBtn" Content="Create" HorizontalAlignment="Right" Height="31" Margin="0,265,15,0"
                VerticalAlignment="Top" Width="73" Click="CreateBtn_OnClick" />
        <Button x:Name="EditInfoBtn" Content="Edit" HorizontalAlignment="Right" Height="31" Margin="0,305,15,0"
                VerticalAlignment="Top" Width="73" Click="EditInfoBtn_OnClick" />
        <Button x:Name="CloseBtn" Content="Close and save" HorizontalAlignment="Right" Height="41" Margin="0,15,15,0"
                VerticalAlignment="Top" Width="90" Click="DeleteDataBtn_OnClick" />
        <ListBox x:Name="ConcertList" HorizontalAlignment="Left" VerticalAlignment="Top" Width="400" Height="320"
                 Margin="15, 15, 0, 0" />
    </Grid>
</Window>